@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Identity
@using Modulum.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject IdentityRedirectManager RedirectManager

@if (externalLogins.Length == 0)
{
    <div>
        <p>
            Não há serviços de autenticação externos configurados. Veja isto <a href="https://go.microsoft.com/fwlink/?LinkID=532715"> artigo
             sobre como configurar este aplicativo ASP.NET para oferecer suporte ao login por meio de serviços externos </a>.
        </p>
    </div>
}
else
{
    <form class="form-horizontal" action="Account/PerformExternalLogin" method="post">
        <div>
            <AntiforgeryToken />
            <input type="hidden" name="ReturnUrl" value="@ReturnUrl" />
            <p>
                @foreach (var provider in externalLogins)
                {
                    var displayName = provider.DisplayName;
                    if (provider.DisplayName == "OpenIdConnect")
                    {
                        displayName = "Microsoft";
                    }
                    <button type="submit" class="btn btn-primary me-2" name="provider" value="@provider.Name" title="Log in using your @displayName account">@displayName</button>
                }
            </p>
        </div>
    </form>
}

@code {
    private AuthenticationScheme[] externalLogins = [];

    [SupplyParameterFromQuery]
    private string? ReturnUrl { get; set; }

    protected override async Task OnInitializedAsync()
    {
        externalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).ToArray();
    }
}
